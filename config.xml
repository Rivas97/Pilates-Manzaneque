<?xml version='1.0' encoding='utf-8'?>
<widget id= "com.phonegap.pilatesmanzaneque" version="2.2.9" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pilates Manzaneque</name>
    <description>
        Aplicación del Studio Pilates Manzaneque.
    </description>
    <author email="fernando.riv.m@gmail.com" href="http://pilatesmanzaneque.es">
        Fernando Rivas
    </author>
    <content src="index.html" />
    <preference name="android-targetSdkVersion"    value="28" />
    <preference name="android-minSdkVersion" value="19" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <access origin="*" />
    <icon src="icon.png"/>
    <plugin name="cordova-plugin-whitelist" spec="1.3.1" />
    <plugin name="cordova-plugin-network-information" spec="1.3.1" />
    <preference name="phonegap-version" value="cli-9.0.0" />

    <platform name="android">
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:usesCleartextTraffic="true" />
        </edit-config>
    </platform>

</widget>
